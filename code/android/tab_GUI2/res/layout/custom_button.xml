        android:contentDescription="@string/fulknapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ful_add_knapp" />

    <!-- relativ layout för att flytta, eller hårdkoda med margin -->

    <TextView
